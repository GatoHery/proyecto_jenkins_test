pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Clona el repositorio desde GitHub
                git branch: 'main', url: 'https://github.com/GatoHery/proyecto_jenkins_test.git'
            }
        }

        stage('Deploy') {
            steps {
                script {
                    // Copia el archivo `hola.html` al directorio de Apache
                    // Nota: Debes asegurarte de tener permisos para escribir en /var/www/html
                    sh 'sudo cp hola.html /var/www/html/index.html'
                }
            }
        }
    }
}